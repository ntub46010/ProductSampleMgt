<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/bg_header</item>
        <item name="android:elevation">4dp</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="prg_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginTop">@dimen/fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
        <item name="android:layout_marginStart">@dimen/fab_margin</item>

    </style>

    <style name="lay_login_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_square_blue</item>
    </style>

    <style name="edt_login_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="btn_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="img_product">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="txt_product_title">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="txt_product_info">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="img_product_gallery">
        <item name="android:layout_width">135dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="txt_goods_detail_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="txt_goods_detail_content" parent="txt_goods_detail_title">
        <item name="android:textColor">#555555</item>
    </style>

    <style name="edt_goods_post_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#555555</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="img_list_mgt_option">
        <item name="android:layout_width">43dp</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="txt_list_mgt_option">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="rdo_edt_product_mode">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="edt_create_cart">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">(選填)</item>
    </style>

    <style name="txt_order_detail_title">
        <item name="android:layout_marginTop">2.5dp</item>
        <item name="android:layout_marginBottom">2.5dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="txt_order_detail_content" parent="txt_order_detail_title">
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:textColor">#666666</item>
    </style>


</resources>
