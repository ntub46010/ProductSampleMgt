<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_padding">

    <TableRow>
        <TextView
            android:text="購物車名稱："
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/edtCartName"
            style="@style/edt_create_cart"
            android:hint=""/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="客戶名稱："
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/edtCustomerName"
            style="@style/edt_create_cart"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="客戶電話："
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/edtCustomerPhone"
            style="@style/edt_create_cart"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="客戶聯絡人："
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/edtContactPerson"
            style="@style/edt_create_cart"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="聯絡人電話："
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/edtContactPhone"
            style="@style/edt_create_cart"/>
    </TableRow>

</TableLayout>