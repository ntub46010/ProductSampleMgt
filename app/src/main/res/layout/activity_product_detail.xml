<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layProductDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    tools:context=".product.ProductDetailActivity">

    <ProgressBar
        android:id="@+id/prgBar"
        style="@style/prg_normal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="135dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#DDDDDD"/>

        <TextView
            android:id="@+id/txtProductName"
            style="@style/txt_goods_detail_title"
            android:layout_marginBottom="10dp"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/txtProductPrice"
            style="@style/txt_goods_detail_content"
            android:layout_marginBottom="12dp"
            android:textSize="23sp"
            android:textColor="#EE0000"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="0dp"
            android:paddingTop="5dp">
            <TableRow
                android:layout_marginBottom="10dp">
                <TextView
                    style="@style/txt_goods_detail_title"
                    android:text="編號："/>
                <TextView
                    android:id="@+id/txtId"
                    style="@style/txt_goods_detail_content"/>
            </TableRow>
            <TableRow
                android:layout_marginBottom="10dp">
                <TextView
                    style="@style/txt_goods_detail_title"
                    android:text="材質："/>
                <TextView
                    android:id="@+id/txtMaterial"
                    style="@style/txt_goods_detail_content"/>
            </TableRow>
            <TableRow
                android:layout_marginBottom="10dp">
                <TextView
                    style="@style/txt_goods_detail_title"
                    android:text="顏色："/>
                <TextView
                    android:id="@+id/txtColor"
                    style="@style/txt_goods_detail_content"/>
            </TableRow>
            <TableRow
                android:layout_marginBottom="10dp">
                <TextView
                    style="@style/txt_goods_detail_title"
                    android:text="尺寸："/>
                <TextView
                    android:id="@+id/txtSize"
                    style="@style/txt_goods_detail_content"/>
            </TableRow>
            <TableRow
                android:layout_marginBottom="10dp">
                <TextView
                    style="@style/txt_goods_detail_title"
                    android:text="備註："/>
                <TextView
                    android:id="@+id/txtPs"
                    style="@style/txt_goods_detail_content"/>
            </TableRow>
            <TableRow
                android:layout_marginBottom="10dp">
                <TextView
                    style="@style/txt_goods_detail_title"
                    android:text="庫存："/>
                <TextView
                    android:id="@+id/txtStock"
                    style="@style/txt_goods_detail_content"/>
            </TableRow>
            <TableRow
                android:layout_marginBottom="10dp">
                <TextView
                    style="@style/txt_goods_detail_title"
                    android:text="安全庫存："/>
                <TextView
                    android:id="@+id/txtSafeStock"
                    style="@style/txt_goods_detail_content"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_cart"
        style="@style/fab"
        app:srcCompat="@drawable/icon_cart"
        app:fabSize="normal"/>

</android.support.design.widget.CoordinatorLayout>