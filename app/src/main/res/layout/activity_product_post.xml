<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/layout_padding"
    tools:context=".product.ProductPostActivity">

    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="135dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#DDDDDD"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/txt_goods_detail_title"
            android:text="品名："/>
        <EditText
            android:id="@+id/edtName"
            style="@style/edt_goods_post_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                style="@style/txt_goods_detail_title"
                android:text="材質："/>
            <EditText
                android:id="@+id/edtMaterial"
                style="@style/edt_goods_post_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
                <TextView
                    style="@style/txt_goods_detail_title"
                    android:text="顏色："/>
                <EditText
                    android:id="@+id/edtColor"
                    style="@style/edt_goods_post_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                style="@style/txt_goods_detail_title"
                android:text="長度："/>
            <EditText
                android:id="@+id/edtLength"
                style="@style/edt_goods_post_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                style="@style/txt_goods_detail_title"
                android:text="寬度："/>
            <EditText
                android:id="@+id/edtWidth"
                style="@style/edt_goods_post_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                style="@style/txt_goods_detail_title"
                android:text="厚度："/>
            <EditText
                android:id="@+id/edtThick"
                style="@style/edt_goods_post_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/txt_goods_detail_title"
            android:text="單價："/>
        <EditText
            android:id="@+id/edtPrice"
            style="@style/edt_goods_post_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/txt_goods_detail_title"
            android:text="備註："/>
        <EditText
            android:id="@+id/edtPs"
            style="@style/edt_goods_post_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                style="@style/txt_goods_detail_title"
                android:text="庫存："/>
            <EditText
                android:id="@+id/edtStock"
                style="@style/edt_goods_post_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                style="@style/txt_goods_detail_title"
                android:text="安全庫存："/>
            <EditText
                android:id="@+id/edtSafeStock"
                style="@style/edt_goods_post_content"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>