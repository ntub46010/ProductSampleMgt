<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vincent.psm">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name=".broadcast_helper.PSMApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service android:name=".broadcast_helper.service.InstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".broadcast_helper.service.MessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".BroadcastActivity" />
        <activity android:name=".ImageUploadActivity" />
        <activity android:name=".product.ProductHomeActivity" />
        <activity android:name=".product.ProductDetailActivity" />
        <activity android:name=".product.ProductMgtActivity" />
        <activity android:name=".product.ProductPostActivity" />
        <activity android:name=".product.ProductUpdateActivity" />
        <activity android:name=".cart.CartHomeActivity" />
        <activity android:name=".cart.CartDetailActivity" />
        <activity android:name=".order.ConvertOrderActivity" />
        <activity android:name=".order.OrderHomeActivity" />
        <activity android:name=".order.OrderDetailActivity" />
        <activity android:name=".order.OrderUpdateActivity"></activity>
    </application>

</manifest>